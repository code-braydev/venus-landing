---
interface Props {
  id: string;
  method: string;
  color: string;
  syntax: string;
  description: string;
  status: string;
}
const { id, method, color, syntax, description, status } = Astro.props;
---

<div
  id={id}
  class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center scroll-mt-32 group"
>
  <div class="space-y-6">
    <div class="flex items-center gap-3">
      <span
        class={`px-3 py-1 rounded-md ${color} text-[10px] font-bold uppercase tracking-widest border border-current/20 opacity-90`}
      >
        {method}
      </span>
      <h3
        class="text-2xl font-bold text-white group-hover:text-purple-200 transition-colors"
      >
        {id}<span class="text-purple-400/50 italic text-sm font-normal ml-1"
          >&lt;T&gt;</span
        >
      </h3>
    </div>

    <p class="text-sm text-purple-100/60 leading-relaxed text-balance">
      {description}
    </p>

    <ul
      class="text-[11px] text-purple-100/30 space-y-2 font-mono bg-white/2 p-4 rounded-lg border border-white/5"
    >
      <li
        class="flex flex-col sm:flex-row justify-between gap-1 border-b border-white/5 pb-2 text-balance"
      >
        <span class="uppercase tracking-tighter text-purple-300/40"
          >Sintaxis</span
        >
        <span class="text-purple-200">{syntax}</span>
      </li>
      <li class="flex flex-col sm:flex-row justify-between gap-1 pt-1">
        <span class="uppercase tracking-tighter text-purple-300/40"
          >Status Esperado</span
        >
        <span class="text-green-400 font-bold">{status}</span>
      </li>
    </ul>
  </div>

  <div class="relative w-full min-w-0">
    <div
      class="absolute -inset-0.5 bg-linear-to-br from-purple-500/10 to-transparent rounded-xl blur opacity-0 group-hover:opacity-100 transition duration-500"
    >
    </div>
    <div
      class="relative venus-card bg-[#0D0A11] border-white/10 font-mono text-xs shadow-xl rounded-xl overflow-hidden"
    >
      <div
        class="flex items-center justify-between px-6 py-3 border-b border-white/5 bg-white/2"
      >
        <span class="text-[9px] uppercase tracking-widest text-white/20"
          >Example Usage</span
        >
        <div class="flex gap-1.5">
          <div class="h-2 w-2 rounded-full bg-red-500/20"></div>
          <div class="h-2 w-2 rounded-full bg-orange-500/20"></div>
          <div class="h-2 w-2 rounded-full bg-green-500/20"></div>
        </div>
      </div>

      <div
        class="p-6 overflow-x-auto custom-scrollbar leading-relaxed text-purple-100/90 whitespace-pre"
      >
        <slot name="code" />
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom scrollbar para que no se vea feo el scroll por defecto */
  .custom-scrollbar::-webkit-scrollbar {
    height: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(168, 85, 247, 0.2);
    border-radius: 10px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(168, 85, 247, 0.4);
  }
</style>
