<header
  class="fixed top-0 left-0 z-50 w-full border-b border-purple-500/10 bg-black/40 backdrop-blur-xl"
>
  <div
    class="mx-auto flex max-w-7xl items-center justify-between px-4 sm:px-6 py-4"
  >
    <a href="/" class="flex items-center gap-3 group">
      <div
        class="relative flex h-9 w-9 items-center justify-center rounded-xl bg-purple-200 text-purple-950 font-black shadow-[0_0_20px_rgba(214,188,250,0.3)] group-hover:rotate-12 transition-all duration-300"
      >
        V
        <span class="absolute -top-1 -right-1 flex h-3 w-3">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-40"
          ></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-purple-100"
          ></span>
        </span>
      </div>
      <div class="flex flex-col leading-none">
        <span
          class="text-lg font-bold tracking-tighter text-transparent bg-clip-text bg-linear-to-r from-white to-purple-400 group-hover:to-purple-200 transition-all duration-500"
        >
          Venus
        </span>
      </div>
    </a>

    <nav class="hidden md:block">
      <ul
        class="flex items-center gap-10 text-sm font-medium text-purple-100/60"
      >
        <li>
          <a
            href="/#why"
            class="hover:text-purple-200 transition-colors relative group"
          >
            Why Venus?
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-purple-300 transition-all group-hover:w-full"
            ></span>
          </a>
        </li>
        <li>
          <a
            href="/doc"
            class="hover:text-purple-200 transition-colors relative group"
          >
            Docs
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-purple-300 transition-all group-hover:w-full"
            ></span>
          </a>
        </li>
      </ul>
    </nav>

    <div class="flex items-center gap-3 sm:gap-6">
      <a
        href="https://github.com/code-braydev/venus"
        target="_blank"
        class="hidden sm:block text-purple-100/40 hover:text-purple-200 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>

      <button
        id="copy-npm"
        data-command="npm install @braydev/venus"
        class="btn-primary py-2 px-3 sm:px-4 text-[10px] sm:text-xs flex items-center gap-2 group/btn"
      >
        <span id="btn-text">npm install</span>
        <svg
          id="copy-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="opacity-50 group-hover/btn:opacity-100"
          ><rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect><path
            d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"
          ></path></svg
        >
      </button>

      <button
        id="menu-toggle"
        class="md:hidden p-2 text-purple-100/60 hover:text-white transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          id="menu-icon"
          ><line x1="4" x2="20" y1="12" y2="12"></line><line
            x1="4"
            x2="20"
            y1="6"
            y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg
        >
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden absolute top-full left-0 w-full bg-[#0B080E]/95 backdrop-blur-2xl border-b border-purple-500/10 animate-fade-in-down"
  >
    <nav class="flex flex-col p-6 gap-6">
      <a
        href="/#why"
        class="text-lg font-medium text-purple-100/80 hover:text-purple-200"
        >Why Venus?</a
      >
      <a
        href="/doc"
        class="text-lg font-medium text-purple-100/80 hover:text-purple-200"
        >Docs</a
      >
      <a
        href="https://github.com/code-braydev/venus"
        target="_blank"
        class="flex items-center gap-2 text-lg font-medium text-purple-100/80"
      >
        GitHub Repository
      </a>
    </nav>
  </div>
</header>

<script>
  const copyBtn = document.getElementById("copy-npm");
  const btnText = document.getElementById("btn-text");
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileLinks = mobileMenu?.querySelectorAll("a");

  copyBtn?.addEventListener("click", async () => {
    const command = copyBtn.getAttribute("data-command");

    try {
      if (command) {
        await navigator.clipboard.writeText(command);
      }
      if (btnText) {
        const originalText = btnText.innerText;
        btnText.innerText = "Â¡Copiado!";

        setTimeout(() => {
          btnText.innerText = originalText;
        }, 2000);
      }
    } catch (err) {
      console.error("Error al copiar: ", err);
    }
  });

  menuToggle?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
    });
  });
</script>
